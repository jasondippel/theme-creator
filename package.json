{
  "name": "electron-react-boilerplate",
  "version": "1.0.1",
  "main": "electron.js",
  "homepage": "./",
  "repository": "https://github.com/jasondippel/electron-react-boilerplate.git",
  "author": "jasondippel <dippelj12@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "electron-is-dev": "1.0.1",
    "prop-types": "15.7.2",
    "react": "16.8.3",
    "react-dom": "16.8.3"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx": "6.24.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "electron": "4.0.5",
    "electron-builder": "20.38.5",
    "eslint": "5.14.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1",
    "lint-staged": "8.1.4",
    "parcel-bundler": "1.11.0",
    "prettier": "1.16.4",
    "pretty-format": "24.0.0",
    "pretty-ms": "4.0.0",
    "pubsub-js": "^1.7.0",
    "styled-components": "4.2.0",
    "typescript-eslint-parser": "^22.0.0",
    "wait-on": "3.2.0"
  },
  "scripts": {
    "react-start": "parcel -p 3000 index.html --out-dir build",
    "react-build": "parcel build index.html --out-dir build --public-url ./",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "electron-build": "electron-builder -mwl",
    "build": "yarn clean-build && yarn react-build && yarn electron-build",
    "lint": "eslint src/ --ext .js --ext .jsx",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,scss,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "build": {
    "appId": "electron.react.boilerplate",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb",
      "category": "Development"
    }
  }
}
